                    var href = $(this).data("href");
                    var userName = $(this).data("user-id");
                    var passwordVal = $(this).data("password");

                    iframe.off('load');
                    iframe.on('load',
                        function() {
                            console.log('ready');
                            var frame = document.getElementById("thirdPartySite");
                            var innerDoc = (frame.contentDocument)
                                ? frame.contentDocument
                                : frame.contentWindow.document;
                            var userId = innerDoc.getElementById(userNameField);
                            var password = innerDoc.getElementById(passwordField);
                            if (typeof userId !== 'undefined' && userId) {
                                userId.value = userName;
                                password.value = passwordVal;
                                var form = userId.form;
                                form.submit();
                                iframe.show();
                            }
                        });

                    iframe.attr('src', href);
                });

